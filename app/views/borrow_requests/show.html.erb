<div class="box">
    <%= render :partial => "/things/image", :locals => { :thing => @borrow_request.thing } %>
    <h4><%= link_to @borrow_request.thing.name, @borrow_request.thing %></h4>
</div>

<div class="request-info">
    <h3>Request Details</h3>
    Requested <%= time_ago_in_words @borrow_request.created_at %> ago, by <%= link_to @borrow_request.user.name, @borrow_request.user %>

    <div class="approval-history">
        <h3>Approval History</h3>
        <%= render @borrow_request.approvals %>
    </div>
</div>