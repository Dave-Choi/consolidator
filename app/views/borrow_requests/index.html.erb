<% if @pending_approvals.length != 0 %>
    <h2>Awaiting Your Approval</h2>
    <ul>
    <% @pending_approvals.each do |approval| %>
        <li>
            <div>
                <%= link_to approval.borrower.name, approval.borrower %> wants to borrow your <%= link_to approval.thing.name, approval.thing %>
            </div>
            <div class="approval-prompt btn-group">
                <%= link_to "<i class=\"icon-thumbs-up\"></i> Approve".html_safe, approval_path(approval, :approval => { :status => "approved"}), :class => "btn", :method => "put" %>
                <%= link_to "<i class=\"icon-thumbs-down\"></i> Reject".html_safe, approval_path(approval, :approval => { :status => "rejected"}), :class => "btn", :method => "put", data: { confirm: 'Are you sure?'} %>
            </div>
        </li>
    <% end %>
    </ul>
<% end %>

<h2>Your Requests</h2>
<%= render(@borrow_requests) || "You don't have any outgoing requests." %>
