<div class="borrowRequest">
    <h4><%= status_icon(borrow_request.status) %> You've requested <%= link_to borrow_request.thing.name, borrow_request.thing %> from: </h4>
    <div class="approvals">
        <ul>
        <% borrow_request.approvals.each do |approval| %>
            <li><%= render :partial => 'approvals/approval', :locals => {:approval => approval} %></li>
        <% end %>
        </ul>
    </div>
</div>