<div class="borrowRequest">
    <h3><%= status_icon(borrow_request.status) %> You've requested to borrow <%= borrow_request.thing.name %> from: </h3>
    <div class="approvals">
        <ul>
        <% borrow_request.approvals.each do |approval| %>
            <li><%= render :partial => 'approvals/approval', :locals => {:approval => approval} %></li>
        <% end %>
        </ul>
    </div>
</div>